# Server
BETTER_AUTH_SECRET=change-me-to-a-real-secret-at-least-32-chars
BETTER_AUTH_URL=http://localhost:3000
PORT=3000

# Mobile (prefix with EXPO_PUBLIC_ for Expo access)
EXPO_PUBLIC_SERVER_URL=http://localhost:3000

# ---------------------------------------------------------------------------
# Fastlane — all values below are only needed for app store releases
# ---------------------------------------------------------------------------

# App identifier (shared by iOS bundle ID and Android package name)
APP_IDENTIFIER=com.example.rnbetterauth

# iOS — Apple Developer / App Store Connect
APPLE_ID=you@example.com
APPLE_TEAM_ID=XXXXXXXXXX
APP_STORE_CONNECT_TEAM_ID=123456789

# iOS — Match (code signing via git repo)
MATCH_GIT_URL=https://github.com/your-org/certificates.git
MATCH_PASSWORD=your-match-encryption-password

# Android — release keystore
ANDROID_KEYSTORE_FILE=/path/to/release.keystore
ANDROID_KEYSTORE_PASSWORD=your-keystore-password
ANDROID_KEY_ALIAS=release-key
ANDROID_KEY_PASSWORD=your-key-password

# Android — Google Play Console service account
GOOGLE_PLAY_JSON_KEY_FILE=/path/to/google-play-service-account.json
