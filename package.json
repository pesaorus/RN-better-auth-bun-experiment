{
  "name": "rn-better-auth-bun-experiment",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev:server": "bun run --filter @app/server dev",
    "dev:mobile": "bun run --filter @app/mobile start",
    "test": "bun run --filter '*' test",
    "test:server": "bun run --filter @app/server test",
    "test:mobile": "bun run --filter @app/mobile test",
    "db:migrate": "bun run --filter @app/server db:migrate",
    "lint": "bunx biome check .",
    "lint:fix": "bunx biome check --write .",
    "format": "bunx biome format --write .",
    "release:ios:beta": "bun run --filter @app/mobile fastlane:ios:beta",
    "release:ios": "bun run --filter @app/mobile fastlane:ios:release",
    "release:android:beta": "bun run --filter @app/mobile fastlane:android:beta",
    "release:android": "bun run --filter @app/mobile fastlane:android:release",
    "release:beta": "bun run lint && bun run test && bun run --filter @app/mobile fastlane:beta",
    "release:production": "bun run lint && bun run test && bun run --filter @app/mobile fastlane:release",
    "release:bump": "bun run --filter @app/mobile fastlane:bump"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14"
  }
}
