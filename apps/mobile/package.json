{
  "name": "@app/mobile",
  "version": "0.0.1",
  "private": true,
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "lint": "expo lint",
    "fastlane:ios:beta": "bundle exec fastlane ios beta",
    "fastlane:ios:release": "bundle exec fastlane ios release",
    "fastlane:android:beta": "bundle exec fastlane android beta",
    "fastlane:android:release": "bundle exec fastlane android release",
    "fastlane:beta": "bundle exec fastlane ios beta && bundle exec fastlane android beta",
    "fastlane:release": "bundle exec fastlane ios release && bundle exec fastlane android release",
    "fastlane:bump": "bundle exec fastlane bump"
  },
  "dependencies": {
    "@app/shared": "workspace:*",
    "@better-auth/expo": "1.4.18",
    "better-auth": "1.4.18",
    "expo": "52.0.49",
    "expo-router": "4.0.22",
    "expo-secure-store": "14.0.1",
    "expo-status-bar": "2.0.1",
    "react": "18.3.1",
    "react-native": "0.76.6",
    "react-native-safe-area-context": "4.14.1",
    "react-native-screens": "4.4.0"
  },
  "devDependencies": {
    "@testing-library/react-native": "12.9.0",
    "@types/react": "18.3.28",
    "jest": "29.7.0",
    "jest-expo": "52.0.6",
    "react-test-renderer": "18.3.1",
    "typescript": "5.9.3"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@sentry/react-native|native-base|react-native-svg|better-auth|@better-auth)"
    ]
  }
}
